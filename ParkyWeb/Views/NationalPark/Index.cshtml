@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="p-4" style="border-radius:20px;">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">National Park List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary text-white" asp-controller="NationalPark" asp-action="Upsert"><i class="fas fa-plus"></i> &nbsp; Create New National Park</a>
        </div>
    </div>
    <br />
    <br />
    <div class="p-3 rounded">
        <div class="p-3 rounded" style="background-color: #cde8e2">
            <table id="tblData" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr class="table-primary">
                        <th>Name</th>
                        <th>State</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts{
<script src="~/js/nationalPark.js"></script>
 }

